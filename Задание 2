ts=int(input("Введите кол-во секунд от 1 до 86400: "))
if 1<=ts<=86400:
    h=ts//3600
    m=(ts%3600)//60
    s=ts%60
    hw = "час" if h==1 else "часа" if 2<=h<=4 else "часов"
    mw = "минута" if m==1 else "минуты" if 2<=m<=4 else "минут"
    sw = "секунда" if s==1 else "секунд" if 2<=s<=4 else "секунды"
    print(f"{h} {hw},{m} {mw} и {s} {sw}")
else: 
    print("Число не соответствует условию")
